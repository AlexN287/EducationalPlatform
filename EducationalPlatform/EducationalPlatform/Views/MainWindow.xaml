<Window x:Class="Tema3_MVP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_MVP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Username:"/>
                <TextBox Name="txtUsername" Width="200" Margin="10" Text="{Binding Username}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Password:"/>
                <TextBox Name="txtPassword" Width="200" Margin="10" Text="{Binding Password}"/>
            </StackPanel>
            <Button Content="Sign In" Margin="10" Width="100" Height="30" Command="{Binding LoginCommand}"/>
        </StackPanel>
    </Grid>
</Window>
